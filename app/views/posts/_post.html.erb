<div class="col-sm-12 col-lg-4 mb-3 flex items-center justify-center text-center">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <h4 class="card-name">
        <a href="#">
          <%= post.name %>
        </a>
      </h4>
      <%= image_tag post.post_image_url, class: 'card-img-top', size: '300x200' %>
      <%#= image_tag 'logo_nikukyu.jpg', class: 'card-img-top', size: '300x200' %>
      <div class="card-body flex justify-center">
        <% if current_user.own?(post) %>
          <%= render 'crud_menus', post: post %>
        <% else %>
          <%= render 'great_button', post: post %>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item">
            <i class="fa-solid fa-cat fa-2xl"></i>
            <%#= post.user.decorate.name %>
          </li>
          <li class="list-inline-item">
            <%#= icon 'far', 'calendar' %>
            <%#= l board.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= post.body %></p>
      </div>
    </div>
  </div>
</div>
