<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <h4 class="card-name">
        <a href="#">
          <%= post.name %>
        </a>
      </h4>
      <%= image_tag 'logo_nikukyu.jpg', class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <div class='mr10 float-right'>
          <a href="#"><i class="fa-regular fa-trash-can fa-2xl"></i></i></i></a>
          <a href="#"><i class="fa-regular fa-pen-to-square fa-2xl"></i></a>
        </div>
        <ul class="list-inline">
          <li class="list-inline-item">
            <i class="fa-solid fa-cat fa-2xl"></i>
            <%#= post.user.decorate.name %>
          </li>
          <li class="list-inline-item">
            <%#= icon 'far', 'calendar' %>
            <%#= l board.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= post.body %></p>
      </div>
    </div>
  </div>
</div>
