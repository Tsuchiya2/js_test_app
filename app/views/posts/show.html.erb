<div class="font-yomogi container flex items-center justify-center text-center">
   <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1 class="text-3xl mt-3"><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag @post.post_image.url, class: 'card-img-top img-fluid', size: '300x200' %>
            </div>
            <div class='col-md-9'>
              <h3 class="d-inline text-xl"><%= @post.name %></h3>
              <!-- 投稿者以外に見せない -->
              <h6 class="text-lg"><%= simple_format(@post.body) %></h6>
              <%= render 'crud_menus', post: @post  if current_user.own?(@post) %>
            </div>
          </div>
          <!-- Twitterシェア -->
          <%= link_to "https://twitter.com/share?url=#{ request.url }&text=みてみて🐾%0a%0a「#{ @post.name }」は正義🐾%0a%0a&hashtags=もふは正義,もふもふ", target: '_blank', class: 'fa-brands fa-twitter fa-2xl', style: 'color: #909398;' do %>
          <% end %>
        </div>
        <!-- コメントフォーム -->
          <%= render 'comments/form', { post: @post, comment: @comment } %>
        <!-- コメントエリア -->
          <%= render 'comments/comments', { comments: @comments } %>
      </article>
    </div>
  </div>
</div>
