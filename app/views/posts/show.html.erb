<div class="font-yomogi container flex items-center justify-center text-center">
   <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1 class="text-3xl mt-3"><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag @post.post_image.url, class: 'card-img-top img-fluid', size: '300x200' %>
            </div>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @post.name %></h3>
              <%= render 'crud_menus', post: @post %>
              <ul class="list-inline">
                <li class="list-inline-item">by <%#= @post.user.decorate.full_name %></li>
              </ul>
            </div>
          </div>
          <%= simple_format(@post.body) %>
        </div>
        <!-- コメントフォーム -->
          <%= render 'comments/form', { post: @post, comment: @comment } %>
        <!-- コメントエリア -->
          <%= render 'comments/comments', { comments: @comments } %>
      </article>
    </div>
  </div>
</div>
